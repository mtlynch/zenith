#!/usr/bin/env bash

# Exit on first failure.
set -e

# Exit on unset variable.
set -u

# Fail when piped commands fail.
set -o pipefail

readonly VM_BINARY="$1"
readonly INPUT_FILE="$2"

OUTPUT_FILE="$(mktemp)"
readonly OUTPUT_FILE

if [[ $(basename $VM_BINARY) == besu-evm ]]; then
  "${VM_BINARY}" --code="$(cat "${INPUT_FILE}")" > "${OUTPUT_FILE}"
  grep --only-matching --perl-regexp '"timens":\K\d+' "${OUTPUT_FILE}"
  exit 0
elif [[ $(basename $VM_BINARY) == *evm ]]; then
  "${VM_BINARY}" run --codefile "${INPUT_FILE}" --statdump \
    > /dev/null \
    2> "${OUTPUT_FILE}"
  grep --only-matching --perl-regexp 'execution time:\s+\K\d+\.\d+.{1,2}s' \
    "${OUTPUT_FILE}"
  exit 0
else
  INPUT_FILE_BINARY="$(mktemp)"
  readonly INPUT_FILE_BINARY

  xxd -r -p < "${INPUT_FILE}" | "$VM_BINARY" > "${OUTPUT_FILE}"

  grep --only-matching --perl-regexp 'execution time:\s+\K\d+\.\d+.{1,2}s' \
    "${OUTPUT_FILE}"
  exit 0
fi
